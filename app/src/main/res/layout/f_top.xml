<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/bt_top_dream"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_add_dream"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_dreamtitle"
        android:text="夢(5)"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/bt_top_dream"
        app:layout_constraintLeft_toLeftOf="@+id/bt_top_dream"
        app:layout_constraintRight_toRightOf="@+id/bt_top_dream"
        />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/bt_add_dream"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="@+id/bt_top_dream"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_top_dream"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_add"
        android:text="夢追加"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/bt_add_dream"
        app:layout_constraintLeft_toLeftOf="@+id/bt_add_dream"
        app:layout_constraintRight_toRightOf="@+id/bt_add_dream"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topis(action history)"
        android:textFontWeight="bold"
        android:paddingBottom="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/border_bottom_2"
        android:fontFamily="cursive"
        android:id="@+id/text_topics"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_top_dream"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_view_1"

        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/recycler_view_1"
        app:layout_constraintTop_toBottomOf="@id/text_topics"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline Dreams"
        android:textFontWeight="bold"
        android:fontFamily="cursive"
        android:paddingBottom="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/border_bottom_2"
        android:id="@+id/text_deadline"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_topics"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_1"

        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/recycler_view_2"
        app:layout_constraintTop_toBottomOf="@id/text_deadline"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_view_1"

        />




</android.support.constraint.ConstraintLayout>